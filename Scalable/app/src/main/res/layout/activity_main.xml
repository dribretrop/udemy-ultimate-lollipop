<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="teerasak.myapp.scalable.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgCard"
        android:src="@drawable/bank_card_50"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card No."
        android:id="@+id/tvCardNo"
        android:textSize="@dimen/text_size_2"
        android:paddingTop="@dimen/text_size_3"
        android:layout_below="@id/imgCard"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXX-XXXX-XXXX"
        android:textSize="@dimen/text_size_2"
        android:id="@+id/tvCardId"
        android:textColor="@android:color/holo_green_dark"
        android:layout_above="@+id/tvTotalBalance"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance"
        android:id="@+id/tvBalance"
        android:textSize="@dimen/text_size_2"
        android:layout_alignParentLeft="true"
        android:layout_alignBaseline="@id/tvTotalBalance"

        android:layout_below="@id/tvCardNo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_1"
        android:text="XXXX.XX"
        android:layout_below="@+id/tvCardNo"
        android:paddingTop="@dimen/text_size_3"
        android:layout_alignParentRight="true"
        android:id="@+id/tvTotalBalance"
        android:textColor="@android:color/holo_red_dark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_grey"
        android:layout_below="@+id/tvTotalBalance"
        android:layout_marginTop="@dimen/text_size_3"/>


</RelativeLayout>
